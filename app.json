{
  "name": "api",
  "scripts": {
    "postdeploy": "composer update && php artisan migrate --seed"
  },
  "env": {
    "APP_DEBUG": {
      "required": true
    },
    "APP_KEY": {
      "required": true
    },
    "CLEARDB_DATABASE_URL": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "cleardb"
  ],
  "buildpacks": [
    {
      "url": "heroku/php"
    }
  ]
}
